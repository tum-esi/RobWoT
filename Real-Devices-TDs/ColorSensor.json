{
    "@context": [
        "https://www.w3.org/2019/wot/td/v1",
        {
            "@language": "en"
        }
    ],
    "description": "A color sensor with a white LED",
    "id": "de:tum:ei:esi:flora",
    "properties": {
        "color": {
            "description": "Returns the calculated color value as R,G,B values. Higher the individual, more likely that color",
            "forms": [
                {
                    "contentType": "application/json",
                    "href": "https://remotelab.esi.cit.tum.de:8081/ColorSensor/properties/color",
                    "op": "readproperty"
                }
            ],
            "items": {
                "maximum": 255,
                "minimum": 0,
                "type": "number"
            },
            "readOnly": true,
            "title": "Detected Color",
            "type": "array"
        },
        "lux": {
            "description": "Returns raw illuminance value that can be used to deduce color value when combined with color temperature",
            "forms": [
                {
                    "contentType": "application/json",
                    "href": "https://remotelab.esi.cit.tum.de:8081/ColorSensor/properties/lux",
                    "op": "readproperty"
                }
            ],
            "maximum": 14000,
            "minimum": 100,
            "readOnly": true,
            "title": "Illuminance",
            "type": "number"
        },
        "temperature": {
            "description": "Returns raw color temperature that can be used to deduce color value when combined with illuminance",
            "forms": [
                {
                    "contentType": "application/json",
                    "href": "https://remotelab.esi.cit.tum.de:8081/ColorSensor/properties/temperature",
                    "op": "readproperty"
                }
            ],
            "maximum": 20000,
            "minimum": 1000,
            "readOnly": true,
            "title": "Color Temperature",
            "type": "number"
        }
    },
    "security": "basic_sc",
    "securityDefinitions": {
        "basic_sc": {
            "in": "header",
            "scheme": "basic"
        }
    },
    "title": "Flora Color Sensor"
}