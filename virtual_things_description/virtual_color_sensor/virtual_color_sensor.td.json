{
    "@context":[
        "https://www.w3.org/2019/wot/td/v1",
        {
          "@language":"en"
        }
      ],
    "@type":"Thing",
    "title": "virtualColorsensor",
    "id": "urn:dev:ops:32473-virtualColorsensor",
    "description": "virtual color sensor in coppeliasim",
    "security": "nosec_sc",
    "securityDefinitions": { 
      "nosec_sc": {
        "scheme": "nosec" 
      }
    },
    "properties": {
        "color":{
            "title": "color sensor value",
            "description": "get the color value from the sensor",
            "type": "array",
            "items":{
                "type":"number",
                "maximum":255,
                "minimum":0
            },
            "readOnly":true,
            "observable": true,
            "maxItems": 3,
            "minItems": 3,
            "forms": [
                {
                  "href": "http://localhost:9000/virtualcolorsensor/properties/color",
                  "contentType": "application/json",
                  "op": [
                    "readproperty"
                  ],
                  "htv:methodName": "GET"
                }
              ]
        }
    }
}