{
    "@context":[
        "https://www.w3.org/2019/wot/td/v1",
        {
          "@language":"en"
        }
      ],
    "@type":"Thing",
    "title": "VirtualConveyorBelt2",
    "id": "urn:dev:ops:32473-virtual-conveyor-right",
    "description": "virtual conveyor belt right in coppeliasim",
    "security": "nosec_sc",
    "securityDefinitions": { 
      "nosec_sc": {
        "scheme": "nosec" 
      }
    },
    "actions":{
        "startBeltBackward":{
            "title":"Start conveyor belt with fixed speed",
            "description":"This action starts moving the conveyor belt backward",
            "forms":[
                {
                "contentType":"application/json",
                "href":"http://192.168.48.73:9000/virtualconveyorbelt2/actions/startBeltBackward",
                "htv:methodName":"POST",
                "op":["invokeaction"]
                }
            ]
        },
        "startBeltForward":{
            "title":"Start conveyor belt",
            "description":"This action starts moving the conveyor belt forward",
            "forms":[
                {
                "contentType":"application/json",
                "href":"http://192.168.48.73:9000/virtualconveyorbelt2/actions/startBeltForward",
                "htv:methodName":"POST",
                "op":["invokeaction"]
                }
            ]
        },
        "stopBelt":{
            "title":"Stop conveyor belt",
            "description":"This action stops moving the conveyor belt",
            "forms":[
                {
                    "contentType":"application/json",
                    "href":"http://192.168.48.73:9000/virtualconveyorbelt2/actions/stopBelt",
                    "htv:methodName":"POST",
                    "op":["invokeaction"]
                }
            ]
        }
    }
}